{
	"$schema": "../misc/rune.1.0.x.json",
	"default_profile": "default",
	"default_test_profile": "test_default",
	"version": "1.0.0",
	"profiles": [
		{
			"name": "default",
			"arch": "windows_amd64",
			"target": "example",
			"output": "bin/{config}/{arch}/",
			"entry": "src",
			"build_flags": [
				"-vet",
				"-debug"
			],
			"pre_build": {
				"scripts": [
					"print_before"
				]
			},
			"post_build": {
				"copy": [
					{ "from": "assets", "to": "assets" },
					{  "from": "assets/test.txt", "to": "test.txt"}
				],
				"scripts": [
					"print_after"
				]
			}
		},
		{
			"name": "test_default",
			"target": "tests",
			"output": "bin/tests/",
			"arch": "windows_amd64",
			"entry": "tests"
		}
	],
	"scripts": {
		"clean": "py ./scripts/clean.py",
		"print_before": "powershell echo \"Hello before\"",
		"print_after": "powershell echo \"Hello after\""
	}
}