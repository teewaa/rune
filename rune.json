{
    "$schema": "./misc/rune.1.0.x.json",
    "version": "1.0.0",
    "default_profile": "debug",
    "profiles": [
        {
            "name": "debug",
            "target": "rune",
            "output": "bin/{config}/{arch}",
            "arch": "windows_amd64",
            "entry": "src",
            "build_mode": "exe",
            "build_flags": [
                "-vet",
                "-debug"
            ]
        },
        {
            "name": "release",
            "target": "rune",
            "output": "bin/{config}/{arch}",
            "arch": "windows_amd64",
            "entry": "src",
            "build_mode": "exe",
            "build_flags": [
                "-vet"
            ]
        },
        {
            "name": "mac",
            "target": "rune",
            "output": "bin/{config}/{arch}",
            "arch": "darwin_arm64",
            "entry": "src",
            "build_mode": "exe",
            "build_flags": [
                "-vet"
            ]
        },
        {
            "name": "linux",
            "target": "rune",
            "output": "bin/{config}/{arch}",
            "arch": "linux_amd64",
            "entry": "src",
            "build_mode": "exe",
            "build_flags": [
                "-vet"
            ]
        }
    ],
    "scripts": {
        "clean": "py ./scripts/clean.py"
    }
}